<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/darkGrey"
    tools:context="com.example.bendev.cocktailcurator.LiquorActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select liquor"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/darkBlue"
        android:layout_marginBottom="5dp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout"
        android:layout_alignParentEnd="true"
        android:background="@color/darkBlue"
        android:layout_above="@+id/liquorWildCard">

        <Button
            android:onClick="onClickliquor"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:text="Cognac"
            android:id="@+id/cognacButton"
            android:layout_gravity="right|top"
            android:background="@color/darkGrey"
            android:textColor="@color/darkBlue"
            android:layout_margin="10dp" />

        <Button
            android:onClick="onClickliquor"
            android:layout_height="140dp"
            android:text="Bourbon"
            android:id="@+id/button3"
            android:layout_gravity="top|left"
            android:background="@color/darkGrey"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:textColor="@color/darkBlue" />

        <Button
            android:onClick="onClickliquor"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:text="Vodka"
            android:id="@+id/vodkaButton"
            android:layout_gravity="right|bottom"
            android:background="@color/darkGrey"
            android:textColorHighlight="@color/darkBlue"
            android:textColor="@color/darkBlue"
            android:layout_margin="10dp" />

        <Button
            android:onClick="onClickliquor"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:text="Gin"
            android:id="@+id/ginButton"
            android:layout_gravity="left|center_vertical"
            android:background="@color/darkGrey"
            android:textColor="@color/darkBlue"
            android:layout_margin="10dp" />

        <Button
            android:onClick="onClickliquor"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:text="Rum"
            android:id="@+id/button"
            android:layout_gravity="right|center_vertical"
            android:background="@color/darkGrey"
            android:textColor="@color/darkBlue"
            android:layout_margin="10dp" />

        <Button
            android:onClick="onClickliquor"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:text="Scotch"
            android:id="@+id/scotchButton"
            android:layout_gravity="left|bottom"
            android:background="@color/darkGrey"
            android:textColor="@color/darkBlue"
            android:layout_margin="10dp" />

    </FrameLayout>

    <Button
        android:onClick="onClickliquor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WildCard"
        android:id="@+id/liquorWildCard"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/darkBlue"
        android:textColor="@color/darkGrey"
        android:layout_margin="5dp" />

</RelativeLayout>
